	      d = new Dept();
	  } else {
	      d = new local Dept();
	  }
	  PersonI m = new Person(d);
	  PersonI p = new Person(d);
	  d.setManager(m);

	  /* Client -> Person; Client -> Department */
	  DeptI t = p.getDept();
	  m = t.getManager();
	  DeptI x = t;
    }
}

