interface PersonI {
  PersonI getManager();
  DeptI getDept();
}

interface DeptI {
  PersonI getManager();
  Unit setManager(PersonI m);
}

class Person(DeptI d) implements PersonI {

    // BEFORE: unused.
    PersonI getManager() {
	  PersonI p=d.getManager();
	  return p;
  }

  DeptI getDept() {
      return d;
