class Dept implements DeptI {
    PersonI m;
    PersonI getManager() {
	  return m;
    }
    Unit setManager(PersonI p) {
	  m = p;
    }
}

class Client implements ClientI {
    Unit enquire(Bool remote){
	  DeptI d;
